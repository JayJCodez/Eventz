<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.activities.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_shape"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="Dashboard"/>

    </RelativeLayout>




    <GridLayout

        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="27dp"
        android:padding="8dp"
        android:rowCount="3"
        android:columnCount="2"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/search"
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardElevation="10dp"
            android:layout_margin="12dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/baseline_event_24"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search Events"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--     Second grid container   -->

        <androidx.cardview.widget.CardView
            android:id="@+id/popular"
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardElevation="10dp"
            android:layout_margin="12dp"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="16dp"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            >

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/flame"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular Events"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--    Third Grid    -->


        <androidx.cardview.widget.CardView
            android:id="@+id/profile"
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardElevation="10dp"
            android:layout_marginLeft="35dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profile"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile Management"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tickets"
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardElevation="10dp"
            android:layout_margin="12dp"

            app:cardCornerRadius="16dp"
            android:layout_marginEnd="24dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ticket"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Tickets"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/manageevent"
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardElevation="10dp"
            android:layout_marginLeft="35dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/baseline_manage_accounts_24"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Event Participants"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/myevents"
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardElevation="10dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/baseline_settings_24"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Event Details"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </GridLayout>

</RelativeLayout>